@model Habits.Models.WeeklyStatisticViewModel

@{
    ViewData["Title"] = "View";
}
<div>
    <div class="row">
        <div class="offset-md-3 col-sm-2">
            @using (Html.BeginForm("GetWeeklyStatistic", "WeeklyStatistic", FormMethod.Get))
            {
                <div class="input-group">
                    @Html.DropDownListFor(model => model.Year, Enumerable.Range(DateTime.Now.Year - 1, 3).Select(x => new SelectListItem { Text = x.ToString() }), "Year", new { @class = "form-control" })

                </div>
            }
        </div>

        <div class="col-sm-4">
            @using (Html.BeginForm("GetWeeklyStatistic", "WeeklyStatistic", FormMethod.Get))
            {
                <div class="input-group">
                    <select asp-for="WeekInYear" class="form-control" asp-items="@(new SelectList(Model.Weeks,"WeekNumber","WeekRange", Model.WeekInYear))">
                    </select>
                </div>
            }
        </div>
    </div>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WeekInYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WeekInYear)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>


